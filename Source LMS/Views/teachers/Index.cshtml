@model IEnumerable<LMS.teacher>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .Teacher, .Teacher i {
        background-color: #EDEDED !important;
        color: #F36A5A !important;
    }

        .Teacher i {
            color: #F36A5A !important;
        }
</style>

<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Teachers Details</b>
                <p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-block btn-md btn-info" })
                </p>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.teach_id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.teach_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.teach_email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.teach_address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.teach_contact)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.teach_salary)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.teach_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.teach_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.teach_email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.teach_address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.teach_contact)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.teach_salary)
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.teach_id }, new { @class = "btn btn-primary btn-sm" }) |
                                        <button class="btn btn-danger btn-sm" onclick="del(this, '@Html.DisplayFor(modelItem => item.teach_id)')">Delete</button>
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" value=@Html.DisplayFor(modelItem => item.teach_id) name="delete" />
                                            <input type="submit" value="Confirm Delete" class="btn btn-danger btn-sm" id=@Html.DisplayFor(modelItem => item.teach_id) style="display: none;" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>