@model LMS.coordinator

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header signup">Coordinator</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.coord_id)
    <form>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.coord_id, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.coord_id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.coord_id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.coord_name, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.coord_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.coord_name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.coord_email, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.coord_email, new { htmlAttributes = new { @class = "form-control", @placeholder = "abc@gmail.com" } })
                    @Html.ValidationMessageFor(model => model.coord_email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.coord_contact, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.coord_contact, new { htmlAttributes = new { @class = "form-control", @placeholder = "XXXX-XXXXXXX" } })
                    @Html.ValidationMessageFor(model => model.coord_contact, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.coord_address, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.coord_address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.coord_address, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.coord_salary, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.coord_salary, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.coord_salary, "", new { @class = "text-danger" })
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-warning" value="Edit" name="sumbit">
        </div>
    </form>
}

<br />
@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-warning" })