@model LMS.student

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header signup">Student</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form>
        <div class="form-group">
            @Html.LabelFor(model => model.stud_enrollment, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.stud_enrollment, new { htmlAttributes = new { @class = "form-control", @placeholder = "StudentXXXXXX (Must not be created before)" } })
            @Html.ValidationMessageFor(model => model.stud_enrollment, "", new { @class = "text-danger" })
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.stud_name, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.stud_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.stud_name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.stud_fatherName, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.stud_fatherName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.stud_fatherName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.stud_email, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.stud_email, new { htmlAttributes = new { @class = "form-control", @placeholder = "abc@gmail.com" } })
                    @Html.ValidationMessageFor(model => model.stud_email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.stud_contact, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.stud_contact, new { htmlAttributes = new { @class = "form-control", @placeholder = "XXXX-XXXXXXX" } })
                    @Html.ValidationMessageFor(model => model.stud_contact, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.stud_batch, "stud_batch", htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.DropDownList("stud_batch", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.stud_batch, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.stud_fee, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.stud_fee, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.stud_fee, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.stud_address, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.stud_address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.stud_address, "", new { @class = "text-danger" })
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-warning" value="Create" name="sumbit">
        </div>
    </form>
}
<br />
@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-warning" })