@model LMS.book

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header signup">Book</h1>

@using (Html.BeginForm("Create", "books", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form>
        <div class="form-group">
            @Html.LabelFor(model => model.b_name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.b_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.b_name, "", new { @class = "text-danger" })
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.b_write, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.b_write, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.b_write, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.b_topic, htmlAttributes: new { @class = "control-label" })
                <div class="form-group">
                    @Html.EditorFor(model => model.b_topic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.b_topic, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.b_book, htmlAttributes: new { @class = "control-label" })
            <input type="file" name="bookFile" class = "form-control"/>
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-warning" value="Create" name="sumbit">
        </div>
    </form>
}
<br />
@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-warning" })