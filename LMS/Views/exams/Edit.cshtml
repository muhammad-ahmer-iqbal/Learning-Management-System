@model LMS.exam

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header signup">Exam</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ex_id)
    <form>
        <div class="form-group">
            @Html.LabelFor(model => model.ex_exam, "ex_exam", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("ex_exam", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ex_exam, "", new { @class = "text-danger" })
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-warning" value="Edit" name="sumbit">
        </div>
    </form>
}